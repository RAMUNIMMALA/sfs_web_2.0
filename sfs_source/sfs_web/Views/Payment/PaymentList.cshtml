@model List<sfs_model.Payment>
@{
    ViewBag.Title = "SFS - Payments";
    Layout = "~/Views/Shared/_PartnerLayout.cshtml";
}

@if (@Model.Count > 0) {
<div class="row">
    <div class="col-lg-12">
    <!--<ol class="breadcrumb">
    <li class="active"> <i class="fa fa-dashboard"></i> Dashboard </li>
    </ol>-->
        <h1 class="page-header"> Plan Payments <small> (@Model.Count())</small> <span class="pull-right"><a class="btn btn-primary" href=#><i class="fa fa-plus"></i> New Payment</a></span></h1>
    </div>
</div>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Partner Id</th>
                        <th>Partner Name</th>
                        <th>Plan Title</th>
                        <th>Amount</th>
                        <th>Paid Date</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(" " + item.PartnerId, "GetPartnerPlanDetails", "Partner", new { PartnerCode = item.PartnerCode }, htmlAttributes: null)</td>
                        <td>@item.PartnerName</td>
                        <td>@item.PlanTitle</td>
                        <td>@item.Amount</td>
                        <td>@item.PaidDate</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
else{
    <h3 class="title"><span class="text-success">There are no Payments Currently</span></h3>
}
