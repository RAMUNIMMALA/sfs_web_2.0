@{
    ViewBag.Title = "SFS - AddPartner";
    Layout = "~/Views/Shared/_PartnerLayout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#datepicker").datepicker();
    });
</script>
<section id="content-section">
    <div class="container">
        <!--<div class="row">
          <div class="col-md-12"><img src="images/numbers-ad.jpg" class="numbers-ad" alt=""></div>
        </div>-->
        <div class="row">
            <div class="col-md-12">
                <h1 class="title"> </h1>
            </div>
        </div>
        <div class="row">
            <div style="width:80%;">
                <div class="row">
                    <div class="col-xs-11">
                        @using (Html.BeginForm("CreateNewDraw", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="well col-sm-offset-2">
                                <h2 class="title"><span class="text-success">Create Next Draw</span></h2>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="UserID">Next Draw</label>
                                    <div class="col-md-9">
                                        @*@Html.TextBoxFor(x => x.DrawDate, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker", @placeholder = "DD/MM/YYYY", @required = "" })*@
                                        <input type="text" name="txtDrawDate" placeholder="DD/MM/YYYY" class="form-control datepicker">
                                    </div>
                                </div>
                                <div class="text-right">
                                    <input class="btn btn-primary btn-lg" name="btnLogin" value="Create Draw" type="submit" />&nbsp;
                                    <input class="btn btn-primary btn-lg" name="btnCancel" value="Cancel" type="submit" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
