@model List<sfs_model.Plan>
@{
    ViewBag.Title = "SFS - Plans";
    Layout = "~/Views/Shared/_PartnerLayout.cshtml";
}

@if (ViewBag.NewPlan != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.NewPlan');
        };
    </script>
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> Plans <small>(@Model.Count())</small> <span class="pull-right"><a class="btn btn-primary" href="/Plan/NewPlan"><i class="fa fa-plus"></i> New Plan</a></span></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>No. Of Months</th>
                        <th>Value</th>
                        <th>Mapped Members</th>
                    </tr>
                </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td><a href="#">@item.Title.ToUpper()</a></td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td><a href="#"><strong>@item.NoofMonths</strong> </a></td>
                        <td><a href="#"><strong>@item.PlanValue.ToString("0.00")</strong> </a></td>
                        <td>@Html.ActionLink(" " + item.MappedMembers, "GetPlanPartnerList", "Partner", new { PlanCode = item.PlanCode, PlanTitle = item.Title }, htmlAttributes: null)
                    </tr>
                </tbody>
            }
            </table>
        </div>
    </div>
</div>
                    
