@model sfs_model.Plan
@{
    ViewBag.Title = "SFS - New Plan";
    Layout = "~/Views/Shared/_PartnerLayout.cshtml";
}

<script src="~/js/jquery.min.js" type="text/javascript"></script>
<script src="~/js/planvalidation.js" type="text/javascript"></script>
<script>
    $(function () {
        $("#datepicker").datepicker(
        {
            dateformat: 'yyyy-mm-dd',
            changemonth: true,
            changeyear: true,
            maxDate: new Date(),
        });

    });
</script>

<section id="content-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title"> </h1>
            </div>
        </div>
        <div class="row">
            <div style="width:80%;">
                <div class="row">
                    <div class="col-xs-11">
                        <div class="col-xs-11">
                            @using (Html.BeginForm("AddNewPlan", "Plan", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                <div class="well col-sm-offset-2">
                                    <h2 class="title">New <span class="text-success"> Plan</span></h2>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="Title">Title</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "required form-control", @id = "title", @placeholder = "Title", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="Details">Details</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(x => x.Details, new { @class = "required form-control", @id = "details", @placeholder = "Details", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="StartDate">Start Date</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(m => m.StartDate, new { id = "startdate", @class = "required form-control", required = " " })
                                            @*@Html.TextBoxFor(x => x.StartDate, new { @class = "required form-control", @required = "", @placeholder = "Start Date" })*@
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="EndDate">End Date</label>
                                        <div class="col-md-9">
                                            @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @id = "enddate", @class = "required form-control", required = " " } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="NoofMonths">No of Months</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.NoofMonths, new { @class = "required form-control", @id = "noofmonths", @placeholder = "No of Months", required = " " })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="NoofPartners">No of Partners</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.NoofPartners, new { @class = "required form-control", @id = "noofpartners", @placeholder = "No of Partners", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="PlanType">Plan Type</label>
                                        <div class="col-md-9">
                                            @Html.DropDownListFor(x => x.PlanType, new SelectList(Model.PType, "Id", "Title"), new { @id = "plantype", @class = "form-control", @placeholder = "Select Type", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="Commission">Commission</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.Commission, new { @class = "form-control", @id = "commission", @placeholder = "Commission", @enabled = "false", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="ChitValue">Plan Value</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.PlanValue, new { @class = "form-control", @id = "planvalue", @placeholder = "Plan Value", @enabled = "false", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="MonthlyAmount">Monthly Amount</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.MonthlyAmount, new { @class = "form-control", @id = "monthlyamount", @placeholder = "Monthly Amount", @enabled = "false", required = " " })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label" for="AuctionBaseAmount">Base Amount</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.AuctionBaseAmount, new { @class = "form-control", @id = "baseamount", @placeholder = "Auction Base Amount", @enabled = "false", required = " " })
                                            @Html.Label(" ", new { @id = "errmsg", style = " color:red" })
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <input class="btn btn-primary btn-lg" name="btnLogin" value="Add Plan" type="submit" />
                                    </div>
                                </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
