@model List<sfs_model.Plan>
@{
    ViewBag.Title = "SFS - Plans";
    Layout = "~/Views/Shared/_PartnerLayout.cshtml";
}
@if (@Model.Count() > 0) {
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> Plans <small>(@Model.Count())</small> <span class="pull-right"><a class="btn btn-primary" href="/Plan/NewPlan"><i class="fa fa-plus"></i> New Plan</a></span></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>No. Of Months</th>
                        <th>Value</th>
                        <th>Mapped Members</th>
                    </tr>
                </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@Html.ActionLink(item.Title.ToUpper(), "GetPlanPartnerDetails", "Plan", new { PlanCode = item.PlanCode }, htmlAttributes: null)
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td><a href="#"><strong>@item.NoofMonths</strong> </a></td>
                        <td><a href="#"><strong>@item.PlanValue</strong> </a></td>
                        <td>@Html.ActionLink(item.MappedMembers.ToString(), "GetPlanPartnerDetails", "Plan", new { PlanCode = item.PlanCode }, htmlAttributes: null)
                    </tr>
                </tbody>
            }
            </table>
        </div>
    </div>
</div>
}
else{
    <h3 class="title"><span class="text-success">There are no active Plans </span></h3>
}

                    
